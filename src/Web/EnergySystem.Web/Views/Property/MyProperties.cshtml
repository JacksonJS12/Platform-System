@model EnergySystem.Web.ViewModels.ApplicationUser.UserPropertiesViewModel

@{
    ViewData["Title"] = "My Properties";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4 text-center">Your Properties</h1>
        </div>
    </div>

    @if (Model.Properties.Any())
    {
        <div class="container mt-5">
            <div class="row">
                @foreach (var property in Model.Properties)
                {
                    <div class="col-md-4">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                @property.Name
                            </div>
                            <div class="card-body">
                                <p><strong>Address:</strong> @property.Address</p>
                                <p><strong>Electricity Need:</strong> @property.ElectricityNeed kWh</p>
                                <a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id"
                                   class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="text-muted">You do not own any properties yet.</p>
                <a asp-controller="Property" asp-action="Create" class="btn btn-success">
                    Add New Property
                </a>
            </div>
        </div>
    }
</div>

@model PropertyFormModel

<h1>Create Property</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Property Name</label>
        <input type="text" id="name" name="Name" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" id="address" name="Address" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="electricityNeed">Electricity Need (kWh)</label>
        <input type="number" id="electricityNeed" name="ElectricityNeed" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="grid">Select Grid</label>
        <select id="grid" name="GridId" class="form-control">
            @foreach (var grid in Model.Grids)
            {
                <option value="@grid.Id">@grid.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Property</button>
</form>


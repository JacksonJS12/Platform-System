                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="text-danger">Electricity Price Spike</h5>
                                    <p class="text-muted mb-0">Electricity prices have increased by 25% during peak
                                        hours. Consider switching to battery power.</p>
                                    <small class="text-secondary">11/27/2024 2:45 PM</small>
                                </div>
                                <span class="badge badge-danger">PriceChange</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="text-danger">Battery Low Charge</h5>
                                    <p class="text-muted mb-0">Your battery charge level is below 10%. Please recharge
                                        during off-peak hours.</p>
                                    <small class="text-secondary">11/27/2024 2:15 PM</small>
                                </div>
                                <span class="badge badge-warning">BatteryWarning</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="text-danger">Energy-Saving Recommendation</h5>
                                    <p class="text-muted mb-0">Using your washing machine after 9 PM can reduce your
                                        energy costs by 20%.</p>
                                    <small class="text-secondary">11/26/2024 4:00 AM</small>
                                </div>
                                <span class="badge badge-info">Tip</span>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <h4>No recent alerts to display.</h4>
                        </div>
                    }
